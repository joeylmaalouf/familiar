{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix $RESOURCE_DIR run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/spells",
        "function": "spells"
      },
      {
        "source": "/spellbooks",
        "function": "main"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
